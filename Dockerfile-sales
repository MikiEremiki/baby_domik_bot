FROM python:3.12-slim as base

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app/src

RUN --mount=type=bind,source=requirements-sales.txt,target=requirements-sales.txt \
    python -m pip install -r requirements-sales.txt

COPY /src/api ./api
COPY /src/db ./db
COPY /src/settings ./settings